   <script>
document.addEventListener('DOMContentLoaded', function() {
    const plusButtons = document.querySelectorAll('.plus');
    const minusButtons = document.querySelectorAll('.minus');
    const productItems = document.querySelectorAll('.card.product');

    plusButtons.forEach(function(button) {
        button.addEventListener('click', function(event) {
            const inputField = event.target.parentElement.querySelector('.product-quantity');
            const productId = inputField.getAttribute("data-id");
            const maxStock = parseInt(inputField.getAttribute('max'));
            const newQuantity = parseInt(inputField.value) + 1;

            if (newQuantity <= maxStock) {
                inputField.value = newQuantity;
                updateTotalAndFetch(productId, newQuantity);
            }
        });
    });

    minusButtons.forEach(function(button) {
        button.addEventListener('click', function(event) {
            const inputField = event.target.parentElement.querySelector('.product-quantity');
            const minStock = parseInt(inputField.getAttribute('min'));
            const productId = inputField.getAttribute("data-id");
            const newQuantity = parseInt(inputField.value) - 1;

            if (newQuantity >= minStock) {
                inputField.value = newQuantity;
                updateTotalAndFetch(productId, newQuantity);
            }
        });
    });

    function updateTotalAndFetch(productId, newQuantity) {
        let totalQuantity = 0;
        let totalPrice = 0;

        productItems.forEach(function(productItem) {
            const inputField = productItem.querySelector('.product-quantity');
            const priceElement = productItem.querySelector('.product-price');
            const quantity = parseInt(inputField.value);
            const price = parseFloat(priceElement.innerText.replace('$', ''));

            totalQuantity += quantity;
            totalPrice += quantity * price;

            const productTotalPrice = quantity * price;
            const totalElement = productItem.querySelector('.product-line-price');
            totalElement.innerText = productTotalPrice.toFixed(2);
        });

        console.log('Total Quantity:', totalQuantity);
        console.log('Total Price:', totalPrice.toFixed(2));

        fetch(`/updateQuantity?id=${productId}&quantity=${newQuantity}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                productId: productId,
                quantity: newQuantity,
                totalPrice: totalPrice.toFixed(2)
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.reload();
            } else {
                console.log('Failed to update quantity.');
                throw new Error('Failed to update quantity.');
            }
        })
        .catch(error => {
            console.error('Error sending total price to backend:', error);
        });
    }

    document.getElementById('checkoutButton').addEventListener('click', function() {
        window.location.href = "/checkoutLoad";
    });
});

